<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="scenePane" prefWidth="250.0" prefHeight="1080.0" style="-fx-background-color: #2c3e50;" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.psvm.NavigationController">
    <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20px; -fx-alignment: CENTER;">
        <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../images/profile.png"/>
        </ImageView>

        <Button text="Welkom terug, Noach!" style=" -fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px; -fx-min-width: 200px;"/>
        <Button text="Teams" onAction="#team" style="-fx-cursor: hand; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px; -fx-min-width: 200px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
        <Button text="Profiel" onAction="#profiel" style="-fx-cursor: hand; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px; -fx-min-width: 200px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
        <Button text="Uitloggen" onAction="#logout" style="-fx-cursor: hand; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px; -fx-min-width: 200px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
    </VBox>
</AnchorPane>
